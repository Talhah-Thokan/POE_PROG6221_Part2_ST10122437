<Window x:Class="CyberBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ThinkinBot Cyber Security Assistant - Part 3" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FF1E1E2E">

    <Window.Resources>
        <!-- Custom Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF00D4FF"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="ChatTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FFEEEEEE"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>

        <Style x:Key="UserTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF00FF7F"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF0099E6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF0066B3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="#FF2D2D44"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Background="#FF252544" Margin="0,0,0,10">
            <TextBlock Text="ðŸ¤– THINKINBOT CYBER SECURITY ASSISTANT" 
                       Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="Part 3 - Enhanced GUI Experience" 
                       FontSize="16" 
                       Foreground="#FF888888" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" 
                    Background="#FF1E1E2E" 
                    BorderThickness="0"
                    Margin="10">
            
            <!-- Chat Tab -->
            <TabItem Header="ðŸ’¬ Chat Assistant" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Welcome Panel -->
                    <Border Grid.Row="0" 
                            Background="#FF252544" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock x:Name="WelcomeText" 
                                       Text="Welcome! Please enter your name to get started." 
                                       Style="{StaticResource ChatTextStyle}"
                                       FontSize="16"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBox x:Name="NameTextBox" 
                                         Style="{StaticResource ModernTextBoxStyle}"
                                         Width="200"/>
                                <Button x:Name="SetNameButton" 
                                        Content="Set Name" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="SetNameButton_Click"/>
                                <Button x:Name="PlayAudioButton" 
                                        Content="ðŸ”Š Play Greeting" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="PlayAudioButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Chat Display -->
                    <ScrollViewer Grid.Row="1" 
                                  x:Name="ChatScrollViewer"
                                  Background="#FF252544" 
                                  Padding="15"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChatDisplay">
                            <!-- Chat messages will be added here dynamically -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Input Panel -->
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="ChatInputBox" 
                                 Grid.Column="0"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 KeyDown="ChatInputBox_KeyDown"/>
                        <Button x:Name="SendButton" 
                                Grid.Column="1"
                                Content="Send" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="SendButton_Click"/>
                        <Button x:Name="HelpButton" 
                                Grid.Column="2"
                                Content="Help" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="HelpButton_Click"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Tasks Tab -->
            <TabItem Header="ðŸ“‹ Task Assistant" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Add Task Panel -->
                    <Border Grid.Column="0" 
                            Background="#FF252544" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="âž• Add New Security Task" 
                                       Style="{StaticResource HeaderTextStyle}"
                                       FontSize="18"/>
                            
                            <TextBlock Text="Title:" 
                                       Style="{StaticResource ChatTextStyle}" 
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="TaskTitleBox" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>

                            <TextBlock Text="Description:" 
                                       Style="{StaticResource ChatTextStyle}" 
                                       Margin="0,10,0,5"/>
                            <TextBox x:Name="TaskDescriptionBox" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Height="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>

                            <TextBlock Text="Reminder Date/Time (Optional):" 
                                       Style="{StaticResource ChatTextStyle}" 
                                       Margin="0,10,0,5"/>
                            <DatePicker x:Name="TaskReminderDate" 
                                        Background="#FF2D2D44"
                                        Foreground="White"
                                        Margin="0,0,0,5"/>
                            <TextBox x:Name="TaskReminderTime" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Text="HH:MM"
                                     ToolTip="Enter time in HH:MM format (24-hour)"/>

                            <Button x:Name="AddTaskButton" 
                                    Content="âž• Add Task" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Margin="0,15,0,0"
                                    Click="AddTaskButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Tasks List Panel -->
                    <Border Grid.Column="1" 
                            Background="#FF252544" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‹ Your Security Tasks" 
                                       Style="{StaticResource HeaderTextStyle}"
                                       FontSize="18"/>
                            
                            <ListView x:Name="TasksListView" 
                                      Background="#FF1E1E2E"
                                      Foreground="White"
                                      Height="400"
                                      Margin="0,10,0,0"
                                      SelectionChanged="TasksListView_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Title" Width="120" DisplayMemberBinding="{Binding Title}"/>
                                        <GridViewColumn Header="Status" Width="80" DisplayMemberBinding="{Binding Status}"/>
                                        <GridViewColumn Header="Reminder" Width="120" DisplayMemberBinding="{Binding ReminderText}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button x:Name="CompleteTaskButton" 
                                        Content="âœ… Complete" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="CompleteTaskButton_Click"/>
                                <Button x:Name="DeleteTaskButton" 
                                        Content="ðŸ—‘ï¸ Delete" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="DeleteTaskButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Quiz Tab -->
            <TabItem Header="ðŸ§  Security Quiz" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Quiz Header -->
                    <Border Grid.Row="0" 
                            Background="#FF252544" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="ðŸ§  Cybersecurity Knowledge Quiz" 
                                       Style="{StaticResource HeaderTextStyle}"
                                       FontSize="20"/>
                            <TextBlock x:Name="QuizScoreText" 
                                       Text="Score: 0/0 | Question 0 of 10" 
                                       Style="{StaticResource ChatTextStyle}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Quiz Content -->
                    <Border Grid.Row="1" 
                            Background="#FF252544" 
                            CornerRadius="5" 
                            Padding="20">
                        <StackPanel x:Name="QuizPanel">
                            <!-- Start Quiz Panel -->
                            <StackPanel x:Name="StartQuizPanel">
                                <TextBlock Text="Test your cybersecurity knowledge!" 
                                           Style="{StaticResource ChatTextStyle}"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           Margin="0,50,0,20"/>
                                <Button x:Name="StartQuizButton" 
                                        Content="ðŸš€ Start Quiz" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        Padding="25,12"
                                        Click="StartQuizButton_Click"/>
                            </StackPanel>

                            <!-- Question Panel -->
                            <StackPanel x:Name="QuestionPanel" Visibility="Collapsed">
                                <TextBlock x:Name="QuestionText" 
                                           Style="{StaticResource ChatTextStyle}"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,20"/>
                                
                                <StackPanel x:Name="AnswersPanel">
                                    <!-- Answer options will be added dynamically -->
                                </StackPanel>

                                <TextBlock x:Name="FeedbackText" 
                                           Style="{StaticResource ChatTextStyle}"
                                           FontSize="14"
                                           Margin="0,20,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>

                            <!-- Results Panel -->
                            <StackPanel x:Name="ResultsPanel" Visibility="Collapsed">
                                <TextBlock x:Name="FinalScoreText" 
                                           Style="{StaticResource HeaderTextStyle}"
                                           FontSize="24"/>
                                <TextBlock x:Name="ResultMessageText" 
                                           Style="{StaticResource ChatTextStyle}"
                                           FontSize="16"
                                           HorizontalAlignment="Center"
                                           Margin="0,20,0,30"/>
                                <Button x:Name="RestartQuizButton" 
                                        Content="ðŸ”„ Take Quiz Again" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        HorizontalAlignment="Center"
                                        Click="RestartQuizButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quiz Controls -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,10,0,0">
                        <Button x:Name="NextQuestionButton" 
                                Content="Next Question âž¡ï¸" 
                                Style="{StaticResource ModernButtonStyle}"
                                Visibility="Collapsed"
                                Click="NextQuestionButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Activity Log Tab -->
            <TabItem Header="ðŸ“Š Activity Log" Style="{StaticResource TabItemStyle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Log Header -->
                    <Border Grid.Row="0" 
                            Background="#FF252544" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10">
                        <TextBlock Text="ðŸ“Š Recent Activity Log" 
                                   Style="{StaticResource HeaderTextStyle}"
                                   FontSize="20"/>
                    </Border>

                    <!-- Activity List -->
                    <ListView x:Name="ActivityLogListView" 
                              Grid.Row="1"
                              Background="#FF252544"
                              Foreground="White"
                              Margin="0,0,0,10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Time" Width="130" DisplayMemberBinding="{Binding Timestamp}"/>
                                <GridViewColumn Header="Action" Width="150" DisplayMemberBinding="{Binding Action}"/>
                                <GridViewColumn Header="Details" Width="300" DisplayMemberBinding="{Binding Details}"/>
                                <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Log Controls -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button x:Name="ClearLogButton" 
                                Content="ðŸ—‘ï¸ Clear Log" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="ClearLogButton_Click"/>
                        <Button x:Name="ExportLogButton" 
                                Content="ðŸ’¾ Export Log" 
                                Style="{StaticResource ModernButtonStyle}"
                                Click="ExportLogButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window> 